html
	include includes/head.pug
	body
		.main.container
			.row
				.col-md-6.col-md-offset-3
					h1.display-4.m-b-2 Post a message!
					form(id="signup" method="post" action="/form")
						div.form-group
							label(for='firstname') First Name
							input.form-control(type='text' id='firstname' placeholder='firstname' name='firstname')
						div.form-group
							label(for='title') Title
							input.form-control(type='text' id='title' placeholder='your title..' name='title')
						div.form-group
							label(for='body') Your Message
							textarea.form-control(type='text', rows='5' id='body' placeholder='write something funny' name='body')
						button.btn.btn-primary(type='submit', id="post_btn") POST!
						div(id='error')
